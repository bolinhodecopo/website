    <script type="text/javascript" charset="utf-8">
      $(function() {
        var $window = $(window);
        var $body = $('body');
        var $logo = $('#app-header .logo');
        var $nav = $('#app-nav');
        var navLimit = $nav.position().top;

        $(window).scroll(function() {
          var windowHeight = $window.scrollTop();
          var yPos = (windowHeight / 3);

          if (windowHeight >= navLimit) {
            $logo.fadeOut();
          } else {
            $logo.fadeIn();
            $logo.css({ top: yPos });
          }
        });
      });
    </script>
